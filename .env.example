# ============================================
# PHANTIA - Variáveis de Ambiente
# Copie este arquivo para .env e preencha os valores
# ============================================

# ============================================
# DOCKER
# ============================================
DOCKER_USER=seu_usuario_docker
VERSION=latest

# ============================================
# APP
# ============================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# ============================================
# REDIS (Cache de Contexto)
# ============================================
REDIS_HOST=phantia-redis
REDIS_PORT=6379
REDIS_PASSWORD=sua_senha_redis_muito_forte_32_caracteres

# ============================================
# SUPABASE (PostgreSQL Gerenciado)
# ============================================
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_KEY=sua_anon_key_do_supabase
SUPABASE_SERVICE_KEY=sua_service_role_key_do_supabase

# ============================================
# AI PROVIDERS
# ============================================

# Anthropic (Claude) - Provider principal
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI (GPT + Whisper)
OPENAI_API_KEY=sk-...

# Google (Gemini)
GOOGLE_AI_KEY=AIza...

# ============================================
# WHATSAPP (UAZAPI)
# ============================================
UAZAPI_URL=https://api.uazapi.com
UAZAPI_TOKEN=seu_token_uazapi

# Webhook secret (para validar requisições)
WEBHOOK_SECRET=seu_webhook_secret

# ============================================
# GOOGLE CALENDAR
# ============================================
GOOGLE_CLIENT_ID=seu_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=seu_client_secret
GOOGLE_REFRESH_TOKEN=seu_refresh_token

# Calendar ID padrão
GOOGLE_CALENDAR_ID=primary

# ============================================
# ASAAS (Pagamentos)
# ============================================
ASAAS_API_KEY=sua_api_key_asaas
ASAAS_ENVIRONMENT=sandbox

# sandbox ou production
# sandbox = https://sandbox.asaas.com/api/v3
# production = https://www.asaas.com/api/v3

# ============================================
# ELEVENLABS (Síntese de Voz)
# ============================================
ELEVENLABS_API_KEY=sua_api_key_elevenlabs
ELEVENLABS_VOICE_ID=id_da_voz_padrao

# ============================================
# TIMEZONE
# ============================================
TZ=America/Sao_Paulo

# ============================================
# PORTAINER (Opcional)
# ============================================
PORTAINER_ADMIN_PASSWORD=sua_senha_admin_portainer
